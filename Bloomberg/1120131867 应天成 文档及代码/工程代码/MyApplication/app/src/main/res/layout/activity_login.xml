
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:src="@drawable/login_background_1"
    android:clickable="true"
    android:keepScreenOn="true"
    android:background="@drawable/bg5"
    android:id="@+id/WelcomeRelativeLayout">

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cameraButton_1"
    android:layout_marginBottom="56dp"
    android:background="@drawable/camera_222"
    android:layout_marginLeft="88dp"
    android:layout_marginStart="88dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/loginButton_1"
    android:layout_marginLeft="38dp"
    android:layout_marginStart="38dp"
    android:background="@drawable/login_222"
    android:layout_alignTop="@+id/cameraButton_1"
    android:layout_toRightOf="@+id/cameraButton_1"
    android:layout_toEndOf="@+id/cameraButton_1" />

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/connectButton_1"
    android:background="@drawable/connect_222"
    android:layout_marginLeft="63dp"
    android:layout_marginStart="63dp"
    android:layout_above="@+id/connectTextView_1"
    android:layout_toRightOf="@+id/loginButton_1"
    android:layout_toEndOf="@+id/loginButton_1" />

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/setupButton_1"
    android:background="@drawable/setting_222"
    android:layout_marginLeft="63dp"
    android:layout_marginStart="63dp"
    android:layout_above="@+id/setupTextView_1"
    android:layout_toRightOf="@+id/connectButton_1"
    android:layout_toEndOf="@+id/connectButton_1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="  相机"
    android:id="@+id/cameraTextView_1"
    android:textSize="20dp"
    android:textColor="@color/abc_primary_text_disable_only_material_light"
    android:layout_below="@+id/loginButton_1"
    android:layout_alignLeft="@+id/cameraButton_1"
    android:layout_alignStart="@+id/cameraButton_1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="  登陆"
    android:id="@+id/loginTextView_1"
    android:textSize="20dp"
    android:textColor="@color/abc_primary_text_disable_only_material_light"
    android:layout_alignTop="@+id/cameraTextView_1"
    android:layout_alignRight="@+id/loginButton_1"
    android:layout_alignEnd="@+id/loginButton_1"
    android:gravity="fill_horizontal|fill_vertical" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="  连接"
    android:id="@+id/connectTextView_1"
    android:textSize="20dp"
    android:layout_alignTop="@+id/loginTextView_1"
    android:layout_alignLeft="@+id/connectButton_1"
    android:layout_alignStart="@+id/connectButton_1"
    android:textColor="@color/abc_primary_text_disable_only_material_light" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="  设置"
    android:id="@+id/setupTextView_1"
    android:textSize="20dp"
    android:layout_alignTop="@+id/connectTextView_1"
    android:layout_alignLeft="@+id/setupButton_1"
    android:layout_alignStart="@+id/setupButton_1"
    android:textColor="@color/abc_primary_text_disable_only_material_light" />

</RelativeLayout>
